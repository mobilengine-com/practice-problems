<form id="QrCodeGenerate" menuName="QrCodeGenerate" title='QrCodeGenerate' platforms="web" xmlns="http://schemas.mobilengine.com/fls/v2">
  <dropdown id="selected" label="Tab:" keyMap="{tab_id}" textMap="{tab_name}" choices='{SELECT a.tab_name, a.tab_id from Tabs a}' />
  <table id='table3' label='Selected table content' record='gyumolcs' 
           recordset='{select gy.gy_nev, gy.gy_ar, gy.gy_suly, gy.gy_tipus, gy.gy_szallitas from Gyumolcs gy where gy.gy_id == selected.selectedKey}'>
        <header>
            <row>
                <cell>
                    <textview id='gy_nev_h' text="Gyümölcs név"/>
                </cell>
                <cell>
                    <textview id='gy_tipus_h' text="Gyümölcs típus"/>
                </cell>
                <cell>
					<textview id='gy_ar_h' text="Gyümölcs ár"/>
                </cell>
                <cell>
                    <textview id='gy_suly_h' text="Gyümölcs súly"/>
                </cell>
            </row>
        </header>
        <row>
            <cell>
                <textview id='gy_nev' text='{gyumolcs.gy_nev}'/> 
            </cell>
            <cell>
                <textview id='gy_tipus' text='{gyumolcs.gy_tipus}'/> 
            </cell>
            <cell>
                <numberbox id='gy_ar' number='{gyumolcs.gy_ar}' 
                           numberFormat='{decimalSeparator: ",", groupSeparator: " ", groupSize: 3, maxFraction: 3}'/> 
            </cell>
            <cell>
                <numberbox id='gy_suly' number='{gyumolcs.gy_suly}'
                           numberFormat='{decimalSeparator: ",", groupSeparator: " ", groupSize: 3, maxFraction: 3}'
                           float="true"/> 
            </cell>
            <cell>
	            	<removebutton text='Remove' label="removebutton1"/>
            </cell>
        </row>
    </table>
</form>